{
  "name": "backend-blueprint",
  "version": "1.0.0",
  "description": "Um backend avançado, seguro e escalável com Node.js, TypeScript, PostgreSQL, Redis e Docker. Inclui autenticação JWT com Max Retry/Jail, RBAC, logs distribuídos, event sourcing, integração com sistemas externos, envio de emails, cron jobs, notificações, cache avançado, rate limiting por usuário, auditoria e filas de mensagens.",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/index.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "npm run typeorm migration:run -- -d src/config/typeorm-cli.ts",
    "seed": "ts-node src/scripts/seed.ts",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angelino-valeta/backend-blueprint.git"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.45.0",
    "@opentelemetry/instrumentation": "^0.45.0",
    "@opentelemetry/instrumentation-express": "^0.33.0",
    "@opentelemetry/instrumentation-http": "^0.45.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.4",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.5",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "typeorm": "^0.3.17",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/bull": "^4.10.0",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.8.9",
    "@types/node-cron": "^3.0.9",
    "@types/nodemailer": "^6.4.11",
    "@types/pg": "^8.10.2",
    "@types/redis": "^4.0.11",
    "@types/ws": "^8.5.6",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "JWT",
    "Nodejs",
    "TS",
    "Docker",
    "Backend"
  ],
  "author": "Angelino Valeta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/angelino-valeta/backend-blueprint/issues"
  },
  "homepage": "https://github.com/angelino-valeta/backend-blueprint#readme"
}